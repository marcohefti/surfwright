{
  "name": "surfwright",
  "version": "0.1.0",
  "private": true,
  "description": "Agent-first browser control surface (CLI + daemon) for Chrome/Chromium",
  "license": "UNLICENSED",
  "type": "module",
  "bin": {
    "surfwright": "dist/cli.js"
  },
  "scripts": {
    "dev": "node --import tsx src/cli.ts",
    "build": "node scripts/build-cli.mjs",
    "contract:snapshot:check": "node scripts/contract-snapshot.mjs --check",
    "contract:snapshot:update": "pnpm -s build && node scripts/contract-snapshot.mjs --update",
    "typecheck": "tsc --noEmit",
    "policy:check": "node scripts/policy-check.mjs",
    "perf:check": "node scripts/perf-budget-check.mjs",
    "skill:validate": "node scripts/validate-skills.mjs",
    "skill:install": "bash scripts/install-skill.sh",
    "start": "node dist/cli.js",
    "verify": "pnpm -s test && pnpm -s validate",
    "validate": "pnpm -s typecheck && pnpm -s policy:check && pnpm -s perf:check && pnpm -s skill:validate && pnpm -s build && pnpm -s contract:snapshot:check",
    "test:contract": "pnpm -s build && node --test test/*.contract.test.mjs",
    "test:fixtures": "node --test test/ingress.fixture-replay.test.mjs",
    "test": "pnpm -s test:contract && pnpm -s test:fixtures"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "playwright-core": "^1.58.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.0"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.27.0"
}
