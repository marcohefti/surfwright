{
  "files": {
    "include": ["**/*"],
    "exclude": ["dist/**", "node_modules/**", ".git/**", ".idea/**"]
  },
  "rules": [
    {
      "name": "feature-boundaries",
      "enabled": true,
      "options": {
        "include": ["src/features/**/*.ts"],
        "exclude": []
      }
    },
    {
      "name": "max-loc",
      "enabled": true,
      "options": {
        "max": 500,
        "include": ["src/**/*.ts", "scripts/**/*.mjs", "test/**/*.mjs"],
        "exclude": []
      }
    }
  ]
}
